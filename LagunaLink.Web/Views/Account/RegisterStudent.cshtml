@model LagunaLink.Web.Models.RegisterNewStudentViewModel

<h4>Registro nueva cuenta de Estudiante</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterStudent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstSurname" class="control-label"></label>
                <input asp-for="FirstSurname" class="form-control" />
                <span asp-validation-for="FirstSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastSurname" class="control-label"></label>
                <input asp-for="LastSurname" class="form-control" />
                <span asp-validation-for="LastSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
